if (typeof (ORD) === "undefined") { ORD = {}; }
ORD.OrderFunctions = {
    onLoad: function (e) {
        var formContext = e.getFormContext();
        var roles = Xrm.Utility.getGlobalContext().userSettings.roles;
        var hasRole = false;
        roles.forEach(function (item) {
            if (item.name.toLowerCase() === "system administrator" || item.name.toLowerCase() === "business manager") {
                hasRole = true;
            }
        });
        if (hasRole) {
            formContext.getControl("azt_recordownerid").setDisabled(false);
            formContext.getControl("azt_numbertosplit").setVisible(true);
        }
    }
}